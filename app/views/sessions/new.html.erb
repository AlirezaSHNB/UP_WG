<h2>Login</h2>
<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Login' %>
<% end %>

<p>New to the site? <%= link_to 'Signup', signup_path, class: 'btn btn-primary' %></p>
