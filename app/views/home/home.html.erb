  <% if logged_in? %>
    Welcome, <%= current_user.username %>! (<%= link_to 'Logout', logout_path, method: :delete %>)
  <% else %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Signup', signup_path %>
  <% end %>
</nav>

